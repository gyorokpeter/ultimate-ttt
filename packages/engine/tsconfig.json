{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "../*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./test/**/*",
    "./dist/**/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/definitions"
  ]
}